<h3><%= @movie.title %> (<%= @movie.year %>)</h3>
<% if @movie.poster_url %>  
  <%= image_tag @movie.poster_url %>
<% end %>

<%= link_to "Edit poster", edit_movie_path %>

<p><%= @movie.plot %></p>

<% if @movie.trailers.any? %>
  <ul>
    <% @movie.trailers.each do |trailer| %>
      <li><%= trailer.title %></li>
      <iframe width="560" height="315" src="<%= trailer.embed_url %>" frameborder="0" allowfullscreen></iframe>
      <li><%= link_to "Edit", edit_movie_trailer_path(@movie, trailer) %></li>
      <li><%= link_to "Destroy", movie_trailer_path(@movie, trailer), method: :delete %></li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Add Trailer", new_movie_trailer_path(@movie) %>

<p>Actors:</p>
<ul>
  <% @movie.actors.each do |actor| %>
    <li><%= link_to actor.name, actor %></li>
  <% end %>
</ul>